<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvDateNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Понедельник, 31 сентябрь"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorGray90"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/tvStudyWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Учебная неделя №10"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorAccent"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnToCurrDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/current_date_logo"
            app:tint="?attr/colorBlack"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="6"
            android:clickable="true"
            android:visibility="visible"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <com.example.scheduleforictis2.ui.schedule.one_row_calendar.OneRowCalendar
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>